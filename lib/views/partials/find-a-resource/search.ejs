<label for="input-find-a-resource" class="hidden">Search for a resource</label>
<div class="campl-search-input lg-search-input lg-search-combo-select-input">

  <div class="btn-group lg-dropdown-selector js-discipline-dropdown">
    <input class="js-discipline-input" type="hidden" name="discipline" value="<% if (data.data.query && data.data.query.discipline) { %><%= data.data.query.discipline %><% } %>">
    <button type="button" class="btn btn-sm dropdown-toggle lg-dropdown-toggle" data-toggle="dropdown">
      <% if (data.data.query && data.data.query.discipline && data.data.query.discipline !== 'all') { %>
        <span class="js-value" data-value="<%= data.data.query.discipline %>"><%= data.data.query.discipline %></span>
      <% } else { %>
        <span class="js-value" data-value="all">All disciplines</span>
      <% } %>
    </button>
    <ul class="dropdown-menu">
      <li>
        <a href="#" class="js-option" data-value="all">All disciplines</a>
      </li>
      <% for (discipline in data.data.disciplines) { %>
      <li>
        <a href="#" class="js-option" data-value="<%= data.data.disciplines[discipline] %>"><%= data.data.disciplines[discipline] %></a>
      </li>
      <% } %>
    </ul>
  </div>

  <div class="lg-base-search">
    <div class="lg-search-input-wrap">
      <input type="text" id="input-find-a-resource" name="q" placeholder="e.g. 'Charles Darwin'"<% if (data.data.query && data.data.query.q) { %> value="<%= decodeURIComponent(data.data.query.q) %>"<% } %>/>
    </div>
  </div>

  <input class="js-type-input" type="hidden" name="contenttype" value="<% if (data.data.query && data.data.query.contenttype) { %><%= data.data.query.contenttype %><% } %>">

  <div class="btn-group lg-dropdown-selector js-type-dropdown">
    <button type="button" class="btn btn-sm dropdown-toggle lg-dropdown-toggle" data-toggle="dropdown">
      <% if (data.data.query && data.data.query.contenttype && data.data.query.contenttype !== 'all') { %>
        <span class="js-value" data-value="<%= data.data.query.contenttype %>"><%= data.data.query.contenttype %></span>
      <% } else { %>
        <span class="js-value" data-value="all">All types</span>
      <% } %>
    </button>
    <ul class="dropdown-menu">
      <li>
        <a href="#" class="js-option" data-value="all">All types</a>
      </li>
      <% for (contenttype in data.data.contenttypes) { %>
        <% if (data.data.contenttypes[contenttype].displayInSearch) { %>
          <li>
            <a href="#" class="js-option" data-value="<%= contenttype %>"><%= contenttype %></a>
          </li>
        <% } %>
      <% } %>
    </ul>
  </div>

  <input type="image" class="campl-search-submit lg-search-submit" alt="Search" src="/public/images/interface/btn-search-inpage.png" />

</div>
